<%- include('../partials/header') %>
    <section class="bookNotes">
        <img src="<%=bookCoverUrl %>" alt="Book cover of <%= book.title %>" srcset="">
        <h1>
            <%= book.title %> by <%= book.author_name %>
        </h1>
        <h4>OLID: <%= book.olid %>
        </h4>
        <h4>Date Read: <%= book.formatted_date %>
        </h4>
        <h4>Rating: <%= book.rating %>/10</h4>

        <h2>Summary</h2>
        <p>
            <%= book.summary %>
        </p>

        <a href="/edit/<%=book.olid%>">Edit Book Details</a>
        <form action="/delete/<%=book.olid%>" method="post">
            <button type="submit">Delete</button>
        </form>


        <h2>Notes</h2>
        <% if(notes.length===0) { %>
            <p>No notes to display</p>
            <% } else { %>
                <% notes.forEach((note, i)=> {%>
                    <article class="note" data-id="<%= note._id %>">
                        <p>
                            <%= note.content %>
                        </p>
                        <small>Written on: <%= note.formatted_date %></small>
                    </article>
                    <% }); %>
                        <% } %>
                            <form action="/books/<%=book.olid%>/note" method="post">
                                <label for="note">Add a note:</label>
                                <textarea name="note" id="note" required></textarea><br /> <br />

                                <button type="submit">Add Note</button>
                            </form>
    </section>

    <%- include('../partials/footer') %>