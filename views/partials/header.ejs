        <nav class="flex justify-between items-center">
            <a class="text-2xl font-semibold" href="/">Home</a>
            <div class="space-x-4">
                <% if (locals.user) { %>
                    <a class="text-lg hover:text-amber-700" href="/new">Add a Book</a>
                    <a class="text-lg hover:text-amber-700" href="/logout">Logout</a>
                    <% } else { %>
                        <a class="text-lg hover:text-amber-700" href="/login">Login</a>
                        <a class="text-lg hover:text-amber-700" href="/register">Register</a>
                        <% } %>
            </div>
        </nav>
    </header>
